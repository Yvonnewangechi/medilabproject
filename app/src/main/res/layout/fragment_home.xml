<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_fragments"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginBottom="35dp">

         <TextView
             android:id="@+id/text_welcome"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="12dp"
             android:text="Welcome User"
             android:textSize="30dp"
             android:textColor="@color/black"
             />
         <TextView
             android:id="@+id/TextNotLogged"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="12dp"
             android:text="Not Logged In"
             android:textSize="30dp"
             android:textColor="@color/black"
             />

         <Button
             android:id="@+id/btnNotLoggedOut"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/text_welcome"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="10dp"
             android:text="Log Out"
             android:backgroundTint="@color/black"/>

         <Button
             android:id="@+id/btnNotLoggedIn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/text_welcome"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="10dp"
             android:text="Log In"
             android:backgroundTint="@color/black"/>

         <GridLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@+id/text_welcome"
             android:layout_marginTop="20dp"
             android:layout_margin="20dp"
             android:columnCount="2"
             android:rowCount="3">

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="0"
                 android:layout_column="0">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
                         android:textColor="@color/black"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="0"
                 android:layout_column="1">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
                         android:textColor="@color/black"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="1"
                 android:layout_column="0">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
                         android:textColor="@color/black"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="1"
                 android:layout_column="1">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
                         android:textColor="@color/black"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="2"
                 android:layout_column="0">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
                         android:textColor="@color/black"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:background="@color/white"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 app:cardUseCompatPadding="true"
                 android:layout_row="2"
                 android:layout_column="1">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical|center_horizontal"
                     android:gravity="center">


                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/baseline_local_hospital_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Labs"
                         android:textSize="16sp"
